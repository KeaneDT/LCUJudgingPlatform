@model WEB_Assignment_Team4.Models.Competitor

@{
    ViewData["Title"] = "Competitor Registration";
}

<h1>Create Competitor Account</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <!--CompetitorID to be auto-generated-->
            <div class="form-group">
                <label asp-for="CompetitorName" class="control-label"></label>
                <input asp-for="CompetitorName" class="form-control" />
                <span asp-validation-for="CompetitorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salutation" class="control-label"></label>
                <div class="col-sm-9 col-md-5">
                    <select asp-for="Salutation"
                            asp-items="@ViewData["SalutationList"]
                            as List<SelectListItem>"
                            class="form-control">
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="EmailAddr" class="control-label"></label>
                <input asp-for="EmailAddr" class="form-control" />
                <span asp-validation-for="EmailAddr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>