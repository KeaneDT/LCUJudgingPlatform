@model WEB_Assignment_Team4.Models.Competition

@{
    ViewData["Title"] = "SelectCompetition";
}

<h1>Select Competition</h1>

<hr />
<form asp-controller="Judge" asp-action="SelectCompetition" method="post">
    <div class="form-group">
        <label asp-for="CompetitionID" class="control-label"></label>
        <div class="col-sm-9 col-md-5">
            <select asp-for="CompetitionID"
                    asp-items="@(new SelectList(
                                    @ViewData["CompetitionJudgeList"] as List<Competition>,
                                              "CompetitionID", "Name"))"
                    class="form-control">
            </select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-9 offset-sm-3">
            <input type="submit" value="Select"
                   class="btn btn-primary" />
        </div>
    </div>
</form>

@if (Convert.ToBoolean(ViewData["ShowResult"]))
{
    <div class="col-sm-9 form-control-plaintext">
        @Html.Value("CompetitionID")
    </div>
}


