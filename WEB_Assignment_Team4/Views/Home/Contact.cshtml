
@{
    ViewData["Title"] = "Contact Page";
}
<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width = device-width,
                                           initial-scale = 1" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="title">
        <h3>Contact Us <br />
        Here can contact us if you need any assistance</h3>
    </div>
    <div class="content">
        <form method="post" action="~/Home/ContactForm">
            <fieldset class="loginFieldset">
                <label for="txtName">Name:</label>
                <input type="text" name="txtName" id="txtName" required
                       placeholder="Your Name" />
                <br />
                <label for="txtTitle">Title:</label>
                <input type="text" name="txttext" id="txttext" required
                       placeholder="Your Subject" />
                <br />
                <label for="txtMessage">Message:</label>
                <input type="text" name="txtMessage" id="txtMessage" required
                       placeholder="Your Message" />
                <br />
                <input type="submit" id="btnStaffLogin" class="myButton" value="Submit" />
                <br />
            </fieldset>
        </form>
    </div>
</body>
</html>
