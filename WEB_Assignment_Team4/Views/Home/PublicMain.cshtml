
@{
    ViewData["Title"] = "Log In Page";
    //Layout = null;
}

<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width = device-width,
                                           initial-scale = 1" />
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />
</head>
<body>
    <div class="heading">
        <br />
        <h3 class="text-center">Login to<br />LCU Judging Platform</h3>
    </div>
    <div>
        <form method="post" action="~/Home/Login">
            <fieldset class="loginFieldset">
                <br />
                <div class="container-fluid">
                    <div class="row justify-content-center">
                        <div class="form-group col-4">
                            <input class="form-control rounded-pill border-3 border-warning" placeholder="Email" type="email" name="txtLoginID" id="txtLoginID" required />
                        </div>
                    </div>
                </div>
                <div class="container-fluid">
                    <div class="row justify-content-center">
                        <div class="form-group col-4">
                            <input class="form-control rounded-pill border-3 border-warning" placeholder="Password" type="password" name="txtPassword" id="txtPassword" required />
                        </div>
                    </div>
                </div>
                <br />
                <div class="container-fluid">
                    <div class="row justify-content-center">
                        <div class="form-group">
                            <input type="submit" id="btnLogin" value="Login" class="btn btn-primary rounded-pill" />
                        </div>
                    </div>
                </div>
                <div class="container-fluid">
                    <div class="row justify-content-center">
                        <span style="color:red  ;">@TempData["Message"]</span>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
    <br />
    <div class="container-fluid">
        <div class="text-center">
            <span class="text-warning">Don't Have an Account?</span>
            <br />
            <a href="~/Competitor/Create">Create a Competitior Account</a>
            <br />
            <a href="~/Judge/Create">Create a Judge Account</a>
        </div>
    </div>
</body>
</html>
