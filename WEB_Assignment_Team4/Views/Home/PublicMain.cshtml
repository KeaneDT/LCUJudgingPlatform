
@{
    ViewData["Title"] = "Log In Page";
    //Layout = null;
}

<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width = device-width,
                                           initial-scale = 1" />
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />
</head>
<body>
    <div class="heading">
        <br />
        <h3 class="text-center">Login to<br />LCU Judging Platform</h3>
        <hr />
    </div>
    <div class="container">
        <div class="row gutters-sm">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center">
                            <form method="post" action="~/Home/Login">
                                <fieldset class="loginFieldset">
                                    <br />
                                    <div class="container-fluid">
                                        <div class="row justify-content-center">
                                            <div class="form-group">
                                                <h6>Email:</h6>
                                                <input class="form-control rounded-pill border-3 border-warning" placeholder="Email" type="email" name="txtLoginID" id="txtLoginID" required />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="container-fluid">
                                        <div class="row justify-content-center">
                                            <div class="form-group col-md-12">
                                                <h6>Password:</h6>
                                                <input class="form-control rounded-pill border-3 border-warning" placeholder="Password" type="password" name="txtPassword" id="txtPassword" required />
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="container-fluid">
                                        <div class="row justify-content-center">
                                            <div class="form-group">
                                                <input type="submit" id="btnLogin" value="Login" class="btn btn-primary rounded-pill" />
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="container-fluid">
                                        <div class="row justify-content-center">
                                            <span style="color:red  ;">@TempData["Message"]</span>
                                        </div>
                                    </div>
                                </fieldset>
                            </form>
                            <br />
                            <br />
                            <div class="container-fluid">
                                <div class="text-center">
                                    <h6>Competitor Login</h6>
                                    <p>
                                        <a href="~/Home/StudentLogin" class="btn btn-primary rounded-pill">Sign in with Google</a>
                                    </p>
                                    <a href="~/Home/Privacy">Privacy Policy</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="container-fluid">
        <div class="text-center">
            <span class="text-warning">Don't Have an Account?</span>
            <br /> 
            <a href="~/Competitor/Create">Create a Competitior Account</a>
            <br />
            <a href="~/Judge/Create">Create a Judge Account</a>
        </div>
    </div>

</body>
</html>
