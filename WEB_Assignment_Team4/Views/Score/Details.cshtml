@model WEB_Assignment_Team4.Models.SubmissionViewModel

@{
    ViewData["Title"] = "Submission Details";
}
<br />
<h3 class="text-center">@ViewData["competitionName"].ToString() Submission</h3>
<hr />
<div class="container">
    <div class="row gutters-sm">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex flex-column align-items-center text-center">
                        <h5 class="text-center">Submission By</h5>
                        <br />
                        <img src="~/images/profile-photo-placeholder.jpg" alt="profile_placeholder" class="rounded-circle" width="174">
                        <br /><br />
                        <h4>@Html.DisplayFor(model => model.Salutation). @Html.DisplayFor(model => model.CompetitorName)</h4>
                        <p class="text-primary">@Html.DisplayFor(model => model.EmailAddr)</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-7">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <h6>@Html.DisplayNameFor(model => model.Ranking)</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">@Html.DisplayFor(model => model.Ranking)</div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-sm-3">
                            <h6>@Html.DisplayNameFor(model => model.CompetitorID)</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">@Html.DisplayFor(model => model.CompetitorID)</div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6>@Html.DisplayNameFor(model => model.FileName)</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">@Html.DisplayFor(model => model.FileName)</div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6>@Html.DisplayNameFor(model => model.UploadDateTime)</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">@Html.DisplayFor(model => model.UploadDateTime)</div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6>@Html.DisplayNameFor(model => model.VoteCount)</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">@Html.DisplayFor(model => model.VoteCount)</div>
                    </div>
                    <hr>
                    <p class="tpbutton btn-toolbar text-center">
                        <a asp-action="Score" class="btn btn-warning rounded-pill mr-2">Score</a>
                        <a asp-action="Rank" class="btn btn-warning rounded-pill">Rank</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
@if (Model.Appeal != null)
 {
    <br />
    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-column align-items-center text-center">
                <h5 class="text-center">🛑 Appeal 🛑</h5>
                <p class="text-primary text-danger">@Html.DisplayFor(model => model.Appeal)</p>
            </div>
        </div>
    </div>
 }
<br />
<div class="text-center">
    <a class="text-warning " asp-action="Index" asp-route-id="@Model.CompetitionID">Back To Submissions</a>
</div>


