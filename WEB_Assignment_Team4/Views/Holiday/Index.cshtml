@model IEnumerable<WEB_Assignment_Team4.Models.Holiday>
<br />
<h3 class="text-center">Contact Us</h3>
<title>Contact Us</title>
<hr />
@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewBook" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Location)</th>
                    <th>@Html.DisplayNameFor(model => model.Date_day)</th>
                    <th>@Html.DisplayNameFor(model => model.Date_month)</th>
                    <th>@Html.DisplayNameFor(model => model.Date_year)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Location</td>
                        <td>@item.Date_day</td>
                        <td>@item.Date_month</td>
                        <td>@item.Date_year</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <h3>No Holidays Today, Offices are open!</h3>
}
<hr />
<div class="title">
    <h2>Send us a Message</h2>
</div>
<hr />
<div class="content">
    <form method="post" action="~/Home/ContactForm">
        <fieldset class="loginFieldset">
            <label for="txtName">Name:</label>
            <input type="text" name="txtName" id="txtName" required
                   placeholder="Your Name" />
            <br />
            <label for="txtTitle">Title:</label>
            <input type="text" name="txttext" id="txttext" required
                   placeholder="Your Subject" />
            <br />
            <label for="txtMessage">Message:</label>
            <input type="text" name="txtMessage" id="txtMessage" required
                   placeholder="Your Message" />
            <br />
            <input type="submit" id="btnStaffLogin" class="myButton" value="Submit" />
            <br />
        </fieldset>
    </form>
</div>
