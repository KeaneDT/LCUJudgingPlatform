@model IEnumerable<WEB_Assignment_Team4.Models.Holiday>
@{
    ViewData["Title"] = "Help";
}
<br />
<h3 class="text-center">Help Page</h3>
<title>Help Page</title>
<hr />
<div class="container">
    <div class="row gutters-sm">
        <div class="col-md-7 col-sm-8">
            <div class="card h-100">
                <h5 class="card-header text-white" style="background-color: #007bff; ">🗺️ Where to Find Us</h5>
                <div class="card-body">
                    <div class="d-flex flex-column align-items-center">
                        <h6>Our Office Address:</h6>
                        <p>
                            36 North Bridge Road, 298324,<br />Singapore 178211
                        </p>
                        @if (Model.ToList().Count <= 0)
                        {
                            <span class="text-success">Offices are open today from 7:00am to 6:30pm!</span>
                        }
                        else
                        {
                            <span class="text-danger">Offices are closed today due to a Public Holiday!</span>
                        }
                        <br />
                        <h6>Telephone Number:</h6>
                        <p>65612345</p>
                        <br />
                        <h6>Email:</h6>
                        <p>LCU-Contact@lcu.sg</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-5 col-sm-5">
            <div class="card h-100">
                <h5 class="card-header text-white" style="background-color: #007bff; ">📞 Contact Us</h5>
                <div class="card-body">
                    <div class="d-flex flex-column align-items-center text-center">
                        <br />
                        <form>
                            <fieldset class="loginFieldset container">
                                <div class="row">
                                    <label for="txtName" class="col-4">Name:</label>
                                    <input type="text" name="txtName" id="txtName" required
                                           placeholder="Your Name" class="col-8 form-control rounded-pill border-3 border-warning" />
                                </div>
                                <br />
                                <div class="row">
                                    <label for="txtTitle" class="col-4">Title:</label>
                                    <input type="text" name="txttext" id="txttext" required
                                           placeholder="Your Subject" class="col-8 form-control rounded-pill border-3 border-warning" />
                                </div>
                                <br />
                                <div class="row">
                                    <label for="txtMessage" class="col-4">Message</label>
                                    <input type="text" name="txtMessage" id="txtMessage" required
                                           placeholder="Your Message" class="col-8 form-control rounded-pill border-3 border-warning" />
                                </div>
                                <br />
                                <br />
                                <input type="submit" id="btnStaffLogin" class="myButton btn btn-warning rounded-pill" />
                                <br />
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
@if (Model.ToList().Count > 0)
{
    <h5>Today's Holiday</h5>
    <div class="table-responsive">
        <table id="viewBook" class="table table-striped table-bordered">
            <thead class="bg-primary text-white">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Location)</th>
                    <th>@Html.DisplayNameFor(model => model.Date)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Location</td>
                        <td>@item.Date</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <br />
}
<div class="text-center">
    <a class="btn btn-primary text-white rounded-pill mr-2" asp-controller="Home" asp-action="Index">Back To Home</a>
</div>