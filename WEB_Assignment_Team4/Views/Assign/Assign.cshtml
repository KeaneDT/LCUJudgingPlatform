@model WEB_Assignment_Team4.Models.JudgeAssign

@{
    ViewData["Title"] = "Assign Judges Roles";
}

<h1>Assign Competition</h1>

<h4>Here you can assign judges to their respective competition</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Assign">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="JudgeID" class="control-label"></label>
                <select asp-for="JudgeID"
                        asp-items="@(new SelectList(
                                   ViewData["judgeList"] as List <Judge>,
                                   "JudgeID","JudgeName"))"
                                   class="form-control" required></select>
                <span asp-validation-for="JudgeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompetitionID" class="control-label"></label>
                <select asp-for="CompetitionID"
                        asp-items="@(new SelectList(
                                   ViewData["competitionList"] as List <Competition>,
                                   "CompetitionID","Name"))"
                        class="form-control" required></select>
                <span asp-validation-for="CompetitionID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

