@model IEnumerable<WEB_Assignment_Team4.Models.Criteria>

@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewCriteria" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>CriteriaID</th>
                    <th>Name</th>
                    <th>Weightage(%)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CriteriaID.ToString()</td>
                        <td>@item.CriteriaName</td>
                        <td>@item.Weightage</td>
                        <td>
                            <a asp-action="Edit" asp-controller="Criteria"
                               asp-route-id="@item.CriteriaID">Edit</a> |
                            <a asp-action="Delete" asp-controller="Criteria"
                               asp-route-id="@item.CriteriaID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red">No record found!</span>
}