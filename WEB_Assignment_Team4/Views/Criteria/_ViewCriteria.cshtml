@model IEnumerable<WEB_Assignment_Team4.Models.Criteria>

@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewCriteria" class="table table-striped table-bordered table-hover">
            <caption>Total Weightage should be 100%</caption>
            <thead class="bg-primary text-white">
                <tr>
                    <th>CriteriaID</th>
                    <th>Name</th>
                    <th>Weightage</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
               @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CriteriaID.ToString()</td>
                        <td>@item.CriteriaName</td>
                        <td>@item.Weightage%</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-controller="Criteria"
                               asp-route-id="@item.CriteriaID"
                               class="btn btn-warning rounded-pill mr-3">Edit</a> 
                            <a asp-action="Delete" asp-controller="Criteria"
                               asp-route-id="@item.CriteriaID"
                               class="btn btn-warning rounded-pill">Delete</a>
                        </td>
                    </tr>
                }
                <tr class="bg-primary">
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <td>Total</td>
                    <td></td>
                    <td>@ViewData["totalWeightage"].ToString()%</td>
                    @if (@ViewData["totalWeightage"].ToString() == "100")
                    {
                        <td class="text-success text-center">Valid Weightage</td>
                    }
                    else
                    {
                        <td class="text-danger text-center">Weightage Not 100%!</td>
                    }
                </tr>
            </tbody>
        </table>
    </div>
}
else
{
    <p class="text-danger">There are no Criteria for this competition! Click Create to add some!</p>
}