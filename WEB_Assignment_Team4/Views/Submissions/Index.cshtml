@model WEB_Assignment_Team4.Models.Submissions

@if (Model.submissionsList.Count > 0)
{
    <div class="table-responsive">
        <table id="viewSubmission" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>CompetitorID</th>
                    <th>Upload Date</th>
                    <th>File Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var items in Model.submissionsList)
                {
                    <tr>
                        <td>@items.CompetitorID</td>
                        <td>@items.UploadDateTime</td>
                        <td>@items.FileName</td>

                        <td>
                            <a asp-action="Vote" asp-controller="Voting"
                               asp-route-id="@items.CompetitionID/@items.CompetitorID">Vote</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red;">No Records Found!</span>
}