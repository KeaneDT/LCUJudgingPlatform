@model IEnumerable<WEB_Assignment_Team4.Models.Competition>

@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="selectInterest" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>CompetitionID</th>
                    <th>Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var items in Model)
                {
                    <tr>
                        <td>@items.CompetitionID.ToString()</td>
                        <td>@items.Name</td>

                        <td>
                            <a asp-action="Edit" asp-controller="Competition"
                               asp-route-id="@items.CompetitionID">Edit</a> |
                            <a asp-action="Details" asp-controller="Competition"
                               asp-route-id="@items.CompetitionID">Details</a>|
                            <a asp-action="Delete" asp-controller="Competiton"
                               asp-route-id="@items.CompetitionID">Delete</a> |
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red;">No Records Found!</span>
}
