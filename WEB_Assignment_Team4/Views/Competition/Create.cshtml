@model WEB_Assignment_Team4.Models.Competition

@{
    ViewData["Title"] = "Create Competition Records";
}
<title>Add Competition Records</title>

<h4>Add Competition Records</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AreaInterestID"
                       class="control-label">Type of Interest</label>
                <select asp-for="AreaInterestID"
                        asp-items="@(new SelectList(
                                   ViewData["interestList"] as List <Interest>,
                                   "AreaInterestID","Name"))"
                        class="form-control" required></select>
                <span style="color:red  ;">@TempData["Message"]</span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" type="date" class="form-control" required/>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" type="date" class="form-control" required />
            </div>
            <div class="form-group">
                <label asp-for="ResultReleaseDate" class="control-label"></label>
                <input asp-for="ResultReleaseDate" class="form-control" required />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary rounded-pill mr-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>