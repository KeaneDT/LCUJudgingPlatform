@model WEB_Assignment_Team4.Models.CompetitionViewModel

@{
    ViewData["Title"] = "Details";
}

<h4 class="PageTitle">ViewCompetition</h4>
<hr />
<fieldset class="FormContent">
    <div class="form-group row">
        <label asp-for="CompetitionID"
               class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.Display("CompetitionID")
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.Display("Name")
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="StartDate" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.Display("StartDate")
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="EndDate" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.Display("EndDate")
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ResultReleaseDate" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.Display("ResultReleaseDate")
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="AreaInterestName"
               class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.Display("AreaInterestName")
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-9 offset-sm-3">
            <a asp-action="Edit" asp-controller="Staff"
               asp-route-id="@Model.CompetitionID">Select</a> |
            <a asp-action="Index"
               asp-controller="Competition">Back to List</a>
        </div>
    </div>
</fieldset>
