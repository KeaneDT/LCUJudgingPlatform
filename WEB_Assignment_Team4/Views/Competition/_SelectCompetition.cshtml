@model IEnumerable<WEB_Assignment_Team4.Models.Competition>

@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="selectInterest" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>CompetitionID</th>
                    <th>Name</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Result Release Date</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var items in Model)
                {
                <tr>
                    <td>@items.CompetitionID.ToString()</td>
                    <td>@items.Name</td>
                    <td>@items.StartDate</td>
                    <td>@items.EndDate</td>
                    <td>@items.ResultReleaseDate</td>

                    <td>
                        <a asp-action="Index" asp-controller="Submissions"
                           asp-route-id="@items.CompetitionID">View Submissions</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red;">No Records Found!</span>
}
