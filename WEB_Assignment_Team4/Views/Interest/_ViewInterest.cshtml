@model IEnumerable<WEB_Assignment_Team4.Models.Interest>

@if (Model.ToList().Count > 0)
{
<div class="table-responsive">
    <table id="selectInterest" class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>AreaInterestID</th>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var items in Model)
            {
                <tr>
                    <td>@items.AreaInterestID.ToString()</td>
                    <td>@items.Name</td>
          
                    <td>
                        <a asp-action="Create" asp-controller="Competition"
                           asp-route-id="@items.AreaInterestID">Create Competition</a> |
                        <a asp-action="Delete" asp-controller="Interest"
                           asp-route-id="@items.AreaInterestID">Delete</a> |
                    </td>
            </tr>
            }
        </tbody>
    </table>
</div>
}
else{
    <span style="color:red;">No Records Found!</span>
}